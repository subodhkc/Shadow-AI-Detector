# Build outputs
dist/
build/
coverage/

# Docker
.dockerignore

# IBM Cloud - these contain sensitive deployment info
.bluemix/
.ibmcloud/

# Kubernetes secrets - NEVER commit these!
secrets/
*.key
*.crt
kubeconfig

# Terraform state files - contain infrastructure secrets
*.tfstate
*.tfstate.*
.terraform/

# Test coverage
coverage/
.nyc_output/

